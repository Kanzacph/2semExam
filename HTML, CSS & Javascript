<div class="container">
        <label for="navn"class="label-name">Name</label>
        <input id="navn" type="text">

        <label for="email" class="labelemail">Email</label>
        <input type="email" id="email">

        <label for="emne" class="label-emne">Subject</label>
        <input type="text" id="emne">
        
        <label for="besked" class="label-besked">Message</label>
       <textarea name="besked" id="besked" cols="50" rows="8"></textarea>

       <button onclick="sendEmail()" id="sendknap">Send</button>
       
    </div>
    
    
    
    
    
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
    
    
    
<script type="text/javascript">
(function() {
emailjs.init("NZIX7iHrBCyYkm4wz");
})();
</script>


<script>
    const userID = "NZIX7iHrBCyYkm4wz"
const serviceID = "service_9pwtggc"
const templateID = "template_b01mqt7"

function sendEmail(){
    var navn = document.getElementById("navn").value;
    var email = document.getElementById("email").value;
    var emne = document.getElementById("emne").value;
    var besked = document.getElementById("besked").value;
    var emailData = {
        name: navn,
        email: email,
        subject: emne,
        message: besked,

    }
    emailjs.send(serviceID, templateID, emailData, userID);
    
    alert("Thank you. Your message has been sent.");
    
    document.getElementById('navn').value='';
      document.getElementById('email').value='';
      
        document.getElementById('emne').value='';
        
          document.getElementById('besked').value='';
            
}

</script>





